    <ImageView
        android:id="@+id/btnPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_push_pin_24"
        android:insetTop="0dp"
        android:insetBottom="0dp" />



