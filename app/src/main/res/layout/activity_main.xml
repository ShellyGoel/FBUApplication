<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="#C51818"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <com.example.fbuapplication.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:filterTouchesWhenObscured="false" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:button_color="@color/purple_200"
        app:icon_four="@drawable/ic_baseline_search_24"
        app:icon_one="@drawable/ic_baseline_home_24"
        app:icon_three="@drawable/ic_baseline_edit_24"
        app:icon_two="@drawable/ic_baseline_email_24"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:number_of_tabs="four"
        app:starting_position="four"
        app:tab_color="@color/purple_500" />

</RelativeLayout>