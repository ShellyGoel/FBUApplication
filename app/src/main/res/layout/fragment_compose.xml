<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ComposeFragment">

<!--    <EditText-->
<!--        android:id="@+id/etRecipient"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Enter recepient user..." />-->

    <TextView
        android:id="@+id/tvCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hey_magnolia"
        android:text="Compose a message:"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="34sp"
        android:textStyle="bold" />


    <AutoCompleteTextView
        android:id="@+id/autoCompleteReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter recepient user..." />

    <EditText
        android:id="@+id/etMessageFromSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter message..." />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Submit"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/purple_500"
        android:text="Logout"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="6dp" />

</LinearLayout>