<?xml version="1.0" encoding="utf-8"?><!--XML implementation of Card Layout-->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <!--    <TextView-->
        <!--        android:id="@+id/tvUsername"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="TextView"-->
        <!--        android:textAppearance="@style/TextAppearance.AppCompat.Large"-->
        <!--        tools:text="Shelly" />-->


        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_people_24"
            android:insetTop="0dp"
            android:insetBottom="0dp" />



        <!--    <ImageView-->
        <!--        android:id="@+id/ivImage"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:scaleType="fitCenter"-->
        <!--        tools:srcCompat="@mipmap/ic_stickynote1" />-->

        <TextView
            android:id="@+id/tvGroupAddedDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:text="date"
            android:textStyle="italic"
            android:visibility="visible"
            tools:text="Date created" />

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/biko_regular"
            android:textColor="#058170"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Group Name" />



    </LinearLayout>

</androidx.cardview.widget.CardView>